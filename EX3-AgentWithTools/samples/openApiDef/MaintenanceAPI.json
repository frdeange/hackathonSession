{
  "openapi": "3.0.1",
  "info": {
    "title": "Maintenance API",
    "description": "Maintenance API - Azure Functions.\n\nManages technician schedules and maintenance job bookings for manufacturing facilities.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://workshoptools-maintenance-cgdecehagmbpagd6.swedencentral-01.azurewebsites.net/api",
      "description": "Azure Functions base URL"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Service health monitoring"
    },
    {
      "name": "Technicians",
      "description": "Technician directory and status"
    },
    {
      "name": "Schedule",
      "description": "Maintenance scheduling and availability"
    },
    {
      "name": "Jobs",
      "description": "Maintenance job booking and tracking"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "operationId": "getHealth",
        "summary": "Health check",
        "description": "Returns the health status of the Maintenance API service.",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthStatus"
                },
                "example": {
                  "status": "healthy",
                  "service": "maintenance-api"
                }
              }
            }
          }
        }
      }
    },
    "/technicians": {
      "get": {
        "tags": ["Technicians"],
        "operationId": "getTechnicians",
        "summary": "Get all technicians",
        "description": "Retrieve all technicians with their current status and specializations.",
        "responses": {
          "200": {
            "description": "Array of all technicians",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Technician"
                  }
                },
                "example": [
                  {
                    "technician_id": "TECH-001",
                    "name": "John Smith",
                    "specialization": ["Electrical", "HVAC"],
                    "skill_level": "Senior",
                    "status": "available",
                    "current_location": "Factory Floor A",
                    "contact_phone": "+1-555-0123"
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/technicians/available": {
      "get": {
        "tags": ["Technicians"],
        "operationId": "getAvailableTechnicians",
        "summary": "Get available technicians",
        "description": "Retrieve only technicians who are currently available for work.",
        "responses": {
          "200": {
            "description": "Array of available technicians",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Technician"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/technicians/{technician_id}": {
      "get": {
        "tags": ["Technicians"],
        "operationId": "getTechnician",
        "summary": "Get specific technician",
        "description": "Retrieve details of a specific technician by their ID.",
        "parameters": [
          {
            "name": "technician_id",
            "in": "path",
            "required": true,
            "description": "ID of the technician.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Technician details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Technician"
                }
              }
            }
          },
          "404": {
            "description": "Technician not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "Technician TECH-001 not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/schedule/next-available": {
      "get": {
        "tags": ["Schedule"],
        "operationId": "getNextAvailableSlot",
        "summary": "Get next available maintenance slot",
        "description": "Find the next available maintenance slot across all technicians.",
        "responses": {
          "200": {
            "description": "Next available slot details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NextAvailableSlotResponse"
                },
                "example": {
                  "slot_id": "SLOT-20231020-001",
                  "technician_id": "TECH-001",
                  "technician_name": "John Smith",
                  "date": "2023-10-20",
                  "start_time": "09:00",
                  "end_time": "17:00",
                  "location": "Factory Floor A"
                }
              }
            }
          },
          "404": {
            "description": "No available slots found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "message": "No available slots found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/schedule/technician/{technician_id}": {
      "get": {
        "tags": ["Schedule"],
        "operationId": "getTechnicianSchedule",
        "summary": "Get technician schedule",
        "description": "Get the schedule for a specific technician for the next N days.",
        "parameters": [
          {
            "name": "technician_id",
            "in": "path",
            "required": true,
            "description": "ID of the technician.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "days",
            "in": "query",
            "required": false,
            "description": "Number of days to look ahead (default: 7).",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 7
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of schedule slots",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ScheduleSlot"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/jobs/book": {
      "post": {
        "tags": ["Jobs"],
        "operationId": "bookMaintenanceJob",
        "summary": "Book a maintenance job",
        "description": "Book a new maintenance job with automatic technician assignment based on availability and specialization match.",
        "requestBody": {
          "required": true,
          "description": "Job booking request details.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobBookingRequest"
              },
              "example": {
                "machine_id": "MACHINE-105",
                "error_code": "ERR-OVERHEAT-42",
                "description": "Motor overheating, requires inspection",
                "priority": "high",
                "estimated_duration_hours": 3.5,
                "preferred_date": "2023-10-20",
                "requested_by": "Plant Manager"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job booked successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobBookingResponse"
                },
                "example": {
                  "job_id": "JOB-20231015-001",
                  "assigned_technician": "John Smith",
                  "scheduled_date": "2023-10-20",
                  "scheduled_time": "09:00",
                  "estimated_completion": "12:30",
                  "status": "scheduled",
                  "priority": "high"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or no available technicians",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "invalidRequest": {
                    "summary": "Invalid request body",
                    "value": {
                      "error": "Invalid request: <details>"
                    }
                  },
                  "noTechnicians": {
                    "summary": "No available technicians",
                    "value": {
                      "error": "No available technicians at this time"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "tags": ["Jobs"],
        "operationId": "getAllJobs",
        "summary": "Get all maintenance jobs",
        "description": "Retrieve all maintenance jobs in the system.",
        "responses": {
          "200": {
            "description": "Array of all jobs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MaintenanceJob"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/jobs/{job_id}": {
      "get": {
        "tags": ["Jobs"],
        "operationId": "getJob",
        "summary": "Get specific job",
        "description": "Retrieve details of a specific maintenance job by its ID.",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "description": "ID of the job.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Job details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MaintenanceJob"
                }
              }
            }
          },
          "404": {
            "description": "Job not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "Job JOB-20231015-001 not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/jobs/status/{status}": {
      "get": {
        "tags": ["Jobs"],
        "operationId": "getJobsByStatus",
        "summary": "Get jobs by status",
        "description": "Retrieve all jobs with a specific status.",
        "parameters": [
          {
            "name": "status",
            "in": "path",
            "required": true,
            "description": "Job status (scheduled, in_progress, completed, cancelled).",
            "schema": {
              "type": "string",
              "enum": ["scheduled", "in_progress", "completed", "cancelled"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of jobs with the specified status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MaintenanceJob"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "Invalid status: foo. Must be one of: scheduled, in_progress, completed, cancelled"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/jobs/{job_id}/status": {
      "put": {
        "tags": ["Jobs"],
        "operationId": "updateJobStatus",
        "summary": "Update job status",
        "description": "Update the status of a maintenance job.",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "description": "ID of the job to update.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "new_status",
            "in": "query",
            "required": true,
            "description": "New status (scheduled, in_progress, completed, cancelled).",
            "schema": {
              "type": "string",
              "enum": ["scheduled", "in_progress", "completed", "cancelled"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobStatusUpdateResponse"
                },
                "example": {
                  "message": "Job status updated successfully",
                  "job_id": "JOB-20231015-001",
                  "old_status": "scheduled",
                  "new_status": "in_progress"
                }
              }
            }
          },
          "400": {
            "description": "Invalid status or missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "missingParam": {
                    "summary": "Missing required query parameter",
                    "value": {
                      "error": "Missing required query parameter: new_status"
                    }
                  },
                  "invalidStatus": {
                    "summary": "Invalid status value",
                    "value": {
                      "error": "Invalid status: foo. Must be one of: scheduled, in_progress, completed, cancelled"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Job not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "error": "Job JOB-20231015-001 not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthStatus": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "healthy"
          },
          "service": {
            "type": "string",
            "example": "maintenance-api"
          }
        }
      },
      "Technician": {
        "type": "object",
        "description": "Maintenance technician with skills and current status.",
        "properties": {
          "technician_id": {
            "type": "string",
            "description": "Unique identifier of the technician."
          },
          "name": {
            "type": "string"
          },
          "specialization": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of specialization areas."
          },
          "skill_level": {
            "type": "string",
            "description": "Skill level (e.g. Junior, Mid, Senior)."
          },
          "status": {
            "type": "string",
            "description": "Current status of the technician.",
            "enum": ["available", "busy", "off_shift", "on_leave"]
          },
          "current_location": {
            "type": "string"
          },
          "contact_phone": {
            "type": "string"
          }
        },
        "required": ["technician_id", "name", "status"]
      },
      "ScheduleSlot": {
        "type": "object",
        "description": "Schedule slot for a technician.",
        "properties": {
          "slot_id": {
            "type": "string"
          },
          "technician_id": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "start_time": {
            "type": "string",
            "description": "Start time (HH:MM)."
          },
          "end_time": {
            "type": "string",
            "description": "End time (HH:MM)."
          },
          "available": {
            "type": "boolean",
            "description": "Whether this slot is available for booking."
          },
          "location": {
            "type": "string"
          }
        },
        "required": ["slot_id", "technician_id", "date", "start_time", "end_time"]
      },
      "NextAvailableSlotResponse": {
        "type": "object",
        "description": "Next available maintenance slot with technician details.",
        "properties": {
          "slot_id": {
            "type": "string"
          },
          "technician_id": {
            "type": "string"
          },
          "technician_name": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          },
          "location": {
            "type": "string"
          }
        },
        "required": ["slot_id", "technician_id", "date", "start_time", "end_time"]
      },
      "JobBookingRequest": {
        "type": "object",
        "description": "Request payload to book a maintenance job.",
        "properties": {
          "machine_id": {
            "type": "string",
            "description": "ID of the machine requiring maintenance."
          },
          "error_code": {
            "type": "string",
            "nullable": true,
            "description": "Error code if applicable."
          },
          "description": {
            "type": "string",
            "description": "Description of maintenance needed."
          },
          "priority": {
            "type": "string",
            "description": "Priority level.",
            "enum": ["low", "medium", "high", "critical"]
          },
          "estimated_duration_hours": {
            "type": "number",
            "format": "float",
            "description": "Estimated duration in hours."
          },
          "preferred_date": {
            "type": "string",
            "format": "date",
            "nullable": true,
            "description": "Preferred date (YYYY-MM-DD)."
          },
          "requested_by": {
            "type": "string",
            "description": "Name or ID of requester."
          }
        },
        "required": [
          "machine_id",
          "description",
          "priority",
          "estimated_duration_hours",
          "requested_by"
        ]
      },
      "JobBookingResponse": {
        "type": "object",
        "description": "Response returned after booking a maintenance job.",
        "properties": {
          "job_id": {
            "type": "string"
          },
          "assigned_technician": {
            "type": "string"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date"
          },
          "scheduled_time": {
            "type": "string"
          },
          "estimated_completion": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["scheduled", "in_progress", "completed", "cancelled"]
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          }
        },
        "required": [
          "job_id",
          "assigned_technician",
          "scheduled_date",
          "scheduled_time",
          "estimated_completion",
          "status",
          "priority"
        ]
      },
      "MaintenanceJob": {
        "type": "object",
        "description": "Stored maintenance job record.",
        "properties": {
          "job_id": {
            "type": "string"
          },
          "machine_id": {
            "type": "string"
          },
          "error_code": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "status": {
            "type": "string",
            "enum": ["scheduled", "in_progress", "completed", "cancelled"]
          },
          "assigned_technician_id": {
            "type": "string"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date"
          },
          "scheduled_time": {
            "type": "string"
          },
          "estimated_duration_hours": {
            "type": "number",
            "format": "float"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "notes": {
            "type": "string"
          }
        },
        "required": ["job_id", "machine_id", "description", "priority", "status"]
      },
      "JobStatusUpdateResponse": {
        "type": "object",
        "description": "Response when a job status is updated.",
        "properties": {
          "message": {
            "type": "string"
          },
          "job_id": {
            "type": "string"
          },
          "old_status": {
            "type": "string"
          },
          "new_status": {
            "type": "string"
          }
        },
        "required": ["message", "job_id", "old_status", "new_status"]
      },
      "ErrorResponse": {
        "type": "object",
        "description": "Error response with message.",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message."
          }
        },
        "required": ["error"]
      }
    }
  }
}